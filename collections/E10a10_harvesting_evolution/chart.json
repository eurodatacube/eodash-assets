{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A chart visualizing data fetched from a geoDB endpoint with separate lines for each indicator",
  "data": {
    "name": "geodb_example",
    "values": []
  },
  "transform": [
    {
      "fold": ["measurement_value", "reference_value"],
      "as": ["type", "value"]
    },
    {
      "calculate": "datum.type == 'measurement_value' ? 'Observation' : 'Model'",
      "as": "series"
    }
  ],
  "encoding": {
    "x": { "field": "time", "type": "temporal", "axis": { "format": "%Y-%m-%d" } },
    "color": {
      "field": "indicator_value",
      "type": "nominal",
      "scale": {
        "domain": ["Observation", "Model"],
        "range": ["#1f77b4", "#ff7f0e"]
      },
      "legend": { "title": "Indicator Type" }
    }
  },
  "layer": [
    {
      "layer": [
        {
          "mark": { "type": "line", "strokeWidth": 2 },
          "encoding": {
            "x": {
              "field": "time",
              "type": "temporal",
              "axis": { "format": "%Y-%m" }
            },
            "y": { "field": "value", "type": "quantitative", "title": "Observation & Model Values" },
            "color": {
              "field": "series",
              "type": "nominal",
              "scale": {
                "domain": ["Observation", "Model"],
                "range": ["#1f77b4", "#ff7f0e"]
              },
              "legend": {"title": "Series"}
            }
          }
        },
        {
          "transform": [{ "filter": { "param": "hover", "empty": false } }],
          "mark": { "type": "point", "size": 100 },
          "encoding": {
            "x": { "field": "time", "type": "temporal" },
            "y": { "field": "value", "type": "quantitative" },
            "color": { "field": "series", "type": "nominal" }
          }
        }
      ]
    },
    {
      "mark": "rule",
      "transform": [{ "filter": { "param": "hover" } }],
      "encoding": {
        "opacity": {
          "condition": { "param": "hover", "value": 0.3 },
          "value": 0
        },
        "tooltip": [
          { "field": "time", "type": "temporal", "title": "Date" },
          {"field": "indicator_value", "type": "nominal", "title": "Crop"},
          {"field": "series", "type": "nominal", "title": "Type"},
          {"field": "value", "type": "quantitative", "title": "Value"}
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["time"],
            "encodings": ["x"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        }
      ]
    }
  ],
  "background": "transparent"
}
