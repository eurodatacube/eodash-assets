{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Overlay 2019 and 2020 values with aligned x-axis, show original dates on tooltip.",
  "data": {
    "name": "process_eox"
  },
  "config": {
    "numberFormat": ".2f"
  },
  "transform": [
    {
      "fold": ["measurement_value", "reference_value"],
      "as": ["year_field", "value"]
    },
    {
      "calculate": "datum.year_field === 'measurement_value' ? '2020' : '2019'",
      "as": "year"
    },
    {
      "calculate": "datum.year_field === 'measurement_value' ? toDate(datum.time) : toDate(datum.reference_time)",
      "as": "original_date"
    },
    {
      "calculate": "timeFormat(datum.original_date, '%m-%d')",
      "as": "month_day"
    },
    { "calculate": "toDate('2020-' + datum.month_day)", "as": "aligned_date" }
  ],
  "encoding": {
    "x": {
      "field": "aligned_date",
      "type": "temporal",
      "title": "Month",
      "axis": { "format": "%d-%b" }
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": [
        "total observed active fields ",
        "in the cultivated areas [ha]"
      ]
    },
    "color": { "field": "year", "type": "nominal", "title": "Year" },
    "tooltip": [
      {
        "field": "original_date",
        "type": "temporal",
        "title": "Date",
        "format": "%Y-%m-%d"
      },
      { "field": "value", "type": "quantitative", "title": "Value" }
    ]
  },
  "layer": [
    { "mark": { "type": "line" } },
    { "mark": { "type": "point" } },
    {
      "transform": [{ "filter": { "param": "hover", "empty": false } }],
      "mark": { "type": "point", "size": 100 }
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": { "value": 0.3, "param": "hover", "empty": false },
          "value": 0
        },
        "tooltip": [
          {
            "field": "original_date",
            "type": "temporal",
            "title": "Time",
            "format": "%Y-%m-%d"
          },
          {
            "field": "measurement_value",
            "type": "quantitative",
            "title": "total observed active fields in the cultivated areas [ha] 2020"
          },
          {
            "field": "reference_value",
            "type": "quantitative",
            "title": "total observed active fields in the cultivated areas [ha] 2019"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["indicator_value", "original_date"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        },
        { "name": "grid", "select": "interval", "bind": "scales" }
      ]
    }
  ]
}
