{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Detected fires time series",
    "data": {"name": "timeseries"},
    "mark": "bar",
    "encoding": {
        "x": {
        "timeUnit": "yearmonthdate",
        "field": "date_time",
        "type": "temporal",
        "title": "Date"
        },
        "y": {
        "aggregate": "count",
        "type": "quantitative",
        "title": "Active fires detected",
        "axis": {
            "format": "d"
        }
    }
  },
  "background": "transparent"
}