{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Daily fire counts",
  "background": "transparent",
  "transform": [
    {"flatten": ["src"], "as": ["data"]},
    {"timeUnit": "yearmonthdate", "field": "data.date_time", "as": "date"},
    {
      "aggregate": [{"op": "count", "field": "data.date_time", "as": "fire_count"}],
      "groupby": ["date"]
    }
  ],
  "data": {
		"name": "timeseries"
	},
  "encoding": {"x": {"field": "date", "type": "temporal", "title": "Date"}},
  "layer": [
    {
      "mark": {"type": "line"},
      "encoding": {
        "x": {"field": "date", "type": "temporal", "title": "Date"},
        "y": {"field": "fire_count", "type": "quantitative", "title": "Detected fires"}
      }
    },
    {
      "mark": {"type": "point", "filled": true, "size": 40},
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "y": {"field": "fire_count", "type": "quantitative"},
        "opacity": {
          "condition": {"param": "hover", "value": 1},
          "value": 0
        },
        "tooltip": [
          {"field": "date", "type": "temporal", "title": "Date"},
          {"field": "fire_count", "type": "quantitative", "title": "Detected fires"}
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "nearest": true,
            "on": "mousemove",
            "encodings": ["x"],
            "clear": "mouseout"
          }
        },
        {"name": "grid", "select": "interval", "bind": "scales"}
      ]
    }
  ]
}
