{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A chart visualizing data fetched from a geoDB endpoint with separate lines for each indicator",
  "data": {
    "name": "geodb_example",
    "values": []
  },
  "encoding": {
    "x": {"field": "time", "type": "temporal", "axis": {"format": "%Y-%m"}},
    "color": {
      "field": "indicator_value",
      "type": "nominal",
      "scale": {
        "domain": ["People in port", "NO2 (rescaled)"],
        "range": ["#1f77b4", "#ff7f0e"]
      },
      "legend": {"title": "Indicator Type"}
    }
  },
  "layer": [
    {
      "encoding": {"y": {"field": "measurement_value", "type": "quantitative", "title": "Normalized NO2 concentration & monthly number of people"}},
      "layer": [
        {"mark": {"type": "line", "strokeWidth": 2}},
        {
          "transform": [{"filter": {"param": "hover", "empty": false}}],
          "mark": {"type": "point", "size": 100}
        }
      ]
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        },
        "tooltip": [
          {"field": "time", "type": "temporal", "title": "Date"},
          {"field": "indicator_value", "type": "nominal", "title": "Indicator"},
          {"field": "measurement_value", "type": "quantitative", "title": "Value"}
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["time"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        }
      ]
    }
  ],
  "background": "transparent"
}
