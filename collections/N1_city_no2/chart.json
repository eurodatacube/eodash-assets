{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Chart with measurement_value and parsed reference_value measurement_types",
  "data": {
    "name": "geodb_example",
    "values": []
  },
  "transform": [
    {
      "calculate": "datum.measurement_value",
      "as": "Tropospheric NO2 (µmol/m²)"
    },
    {
      "calculate": "slice(datum.reference_value, 1, length(datum.reference_value) - 1)",
      "as": "ref_clean"
    },
    {
      "calculate": "split(datum.ref_clean, ',')[0]",
      "as": "Median"
    },
    {
      "calculate": "split(datum.ref_clean, ',')[1]",
      "as": "Min"
    },
    {
      "calculate": "split(datum.ref_clean, ',')[2]",
      "as": "Max"
    },
    {
      "calculate": "toNumber(datum.measurement_value) + toNumber(split(datum.ref_clean, ',')[3])",
      "as": "STD upper"
    },
    {
      "calculate": "datum.measurement_value - split(datum.ref_clean, ',')[3]",
      "as": "STD"
    },
    {
      "fold": ["Tropospheric NO2 (µmol/m²)", "Median", "Min", "Max"],
      "as": ["measurement", "value"]
    },
    {
      "calculate": "toNumber(datum.value)",
      "as": "Tropospheric NO2 (µmol/m²)"
    }
  ],
  "encoding": {
    "x": {
      "field": "time",
      "type": "temporal",
      "axis": { "format": "%Y-%m-%d" }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "area",
        "opacity": 0.7,
        "color": "#faf9b1"
      },
      "encoding": {
        "y": { "field": "STD", "type": "quantitative" },
        "y2": { "field": "STD upper" }
      }
    },
    {
      "mark": "line",
      "encoding": {
        "y": {
          "field": "Tropospheric NO2 (µmol/m²)",
          "type": "quantitative"
        },
        "color": {
          "field": "measurement",
          "type": "nominal",
          "scale": {
            "domain": [
              "Tropospheric NO2 (µmol/m²)",
              "Median",
              "Min",
              "Max",
              "STD"
            ],
            "range": ["#22AA99", "#000000", "#228833", "#AA3377", "#faf9b1"]
          },
          "legend": { "title": "Measurement" }
        },
        "strokeWidth": {
          "field": "measurement",
          "type": "nominal",
          "legend": null
        }
      }
    },
    {
      "transform": [{ "filter": { "param": "hover", "empty": false } }],
      "mark": "point"
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": { "value": 0.3, "param": "hover", "empty": false },
          "value": 0
        },
        "tooltip": [
          {
            "field": "time",
            "type": "temporal",
            "title": "Date",
            "format": "%Y-%m-%d"
          },
          { "field": "value", "type": "quantitative", "title": "Value" },
          { "field": "measurement", "type": "nominal", "title": "measurement" }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["time"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        },
        {"name": "grid", "select": "interval", "bind": "scales"}
      ]
    }
  ],
  "background": "transparent"
}
