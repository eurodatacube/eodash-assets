{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A chart visualizing data fetched from a geoDB endpoint with separate lines for each indicator",
  "data": {
    "name": "geodb_example",
    "values": []
  },
  "transform": [
    {
      "pivot": "indicator_value",
      "value": "measurement_value",
      "groupby": ["time"]
    }
  ],
  "encoding": {
    "x": { "field": "time", "type": "temporal", "axis": { "format": "%Y-%m" } },
    "color": {
      "field": "indicator_value",
      "type": "nominal",
      "scale": {
        "domain": ["Total traffic", "NO2 (rescaled)"],
        "range": ["#1f77b4", "#ff7f0e"]
      },
      "legend": { "title": "Indicator Type" }
    }
  },
  "layer": [
    {
      "transform": [
        {
          "fold": ["Total traffic", "NO2 (rescaled)"],
          "as": ["indicator", "measurement_value"]
        }
      ],
      "layer": [
        {
          "mark": { "type": "line", "strokeWidth": 2 },
          "encoding": {
            "x": {
              "field": "time",
              "type": "temporal",
              "axis": { "format": "%Y-%m" }
            },
            "y": { "field": "measurement_value", "type": "quantitative", "title": "Normalized NO2 concentration & monthly boat count" },
            "color": {
              "field": "indicator",
              "type": "nominal",
              "scale": {
                "domain": ["Total traffic", "NO2 (rescaled)"],
                "range": ["#1f77b4", "#ff7f0e"]
              },
              "legend": { "title": "Indicator Type" }
            }
          }
        },
        {
          "transform": [{ "filter": { "param": "hover", "empty": false } }],
          "mark": { "type": "point", "size": 100 },
          "encoding": {
            "x": { "field": "time", "type": "temporal" },
            "y": { "field": "measurement_value", "type": "quantitative" },
            "color": { "field": "indicator", "type": "nominal" }
          }
        }
      ]
    },
    {
      "mark": "rule",
      "transform": [{ "filter": { "param": "hover" } }],
      "encoding": {
        "opacity": {
          "condition": { "param": "hover", "value": 0.3 },
          "value": 0
        },
        "tooltip": [
          { "field": "time", "type": "temporal", "title": "Date" },
          {
            "field": "Total traffic",
            "type": "quantitative",
            "title": "Total traffic"
          },
          {
            "field": "NO2 (rescaled)",
            "type": "quantitative",
            "title": "NO2 (rescaled)"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["time"],
            "encodings": ["x"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        },
        {"name": "grid", "select": "interval", "bind": "scales"}
      ]
    }
  ],
  "background": "transparent"
}
