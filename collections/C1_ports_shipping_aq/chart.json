{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A chart visualizing data fetched from a geoDB endpoint with separate lines for each indicator",
  "data": {
    "name": "geodb_example",
    "values": []
  },
  "transform": [
    {
      "calculate": "timeFormat(datum.time, '%Y-%m-%d')",
      "as": "date_str"
    }
  ],
   "encoding": {
    "x": {
      "field": "date_str",
      "type": "nominal",
      "axis": { "title": "Date" }
    },
    "xOffset": {
      "field": "indicator_value",
      "type": "nominal"
    },
    "y": {
      "field": "measurement_value",
      "type": "quantitative",
      "axis": {
        "title": "Normalized NO2 concentration & monthly boat count"
      }
    },
    "color": {
      "field": "indicator_value",
      "type": "nominal",
      "scale": {
        "domain": [
          "Total boat traffic", "NO2 (rescaled)"
        ],
        "range": ["#1f77b4", "#ff7f0e"]
      },
      "legend": { "title": "Indicator Type" }
    }
  },
  "layer": [
    { "mark": { "type": "bar" } },
    {
      "transform": [{ "filter": { "param": "hover", "empty": false } }],
      "mark": { "type": "point", "size": 100 }
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": { "value": 0.3, "param": "hover", "empty": false },
          "value": 0
        },
        "tooltip": [
          {
            "field": "time",
            "type": "temporal",
            "title": "Time",
            "format": "%Y-%m-%d"
          },
          {
            "field": "measurement_value",
            "type": "quantitative",
            "title": "value"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["indicator_value", "date_str"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        },
        { "name": "grid", "select": "interval", "bind": "scales" }
      ]
    }
  ],
  "background": "transparent"
}
