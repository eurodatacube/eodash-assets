{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A chart visualizing data fetched from a geoDB endpoint",
  "data": {
    "name": "geodb_example"
  },
  "encoding": {
    "x": {
      "field": "time",
      "type": "temporal",
      "axis": { "format": "%Y-%m-%d" }
    }
  },
  "layer": [
    {
      "encoding": {
        "y": {
          "field": "measurement_value",
          "type": "quantitative",
          "title": "Lake Water Level [m]",
          "scale": {
            "zero": false
          }
        }
      },
      "layer": [
        {
          "mark": "line"
        },
        {
          "transform": [
            {
              "filter": {
                "param": "hover",
                "empty": false
              }
            }
          ],
          "mark": "point"
        }
      ]
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {
            "value": 0.3,
            "param": "hover",
            "empty": false
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "measurement_value",
            "type": "quantitative",
            "title": "Lake Water Level [m]"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["time"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        },
        { "name": "grid", "select": "interval", "bind": "scales" }
      ]
    }
  ]
}
