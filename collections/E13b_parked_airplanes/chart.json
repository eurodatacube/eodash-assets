{
  "data": {
    "name": "process_eox"
  },
  "layer": [
    {
      "layer": [
        {
          "mark": "bar"
        },
        {
          "mark": "point",
          "transform": [
            {
              "filter": {
                "empty": false,
                "param": "hover"
              }
            }
          ]
        }
      ],
      "encoding": {
        "y": {
          "type": "quantitative",
          "field": "measurement_value"
        }
      }
    },
    {
      "mark": "rule",
      "params": [
        {
          "name": "hover",
          "select": {
            "on": "pointerover",
            "type": "point",
            "clear": "pointerout",
            "fields": [
              "time"
            ],
            "nearest": true
          }
        },
        {"name": "grid", "select": "interval", "bind": "scales"}
      ],
      "encoding": {
        "opacity": {
          "value": 0,
          "condition": {
            "empty": false,
            "param": "hover",
            "value": 0.3
          }
        },
        "tooltip": [
          {
            "type": "quantitative",
            "field": "measurement_value"
          },
          {
	    "field": "time",
	    "type": "temporal",
	    "title": "Date",
	    "format": "%Y-%m-%d"
          }
        ]
      }
    }
  ],
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "encoding": {
    "x": {
      "type": "temporal",
      "field": "time",
      "title": "Year",
      "axis": {"format": "%b %Y"}
    }
  },
  "background": "transparent",
  "description": "A chart visualizing data fetched from a geoDB endpoint"
}
