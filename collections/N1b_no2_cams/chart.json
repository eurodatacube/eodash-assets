{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Chart with measurement_value and parsed reference_value measurement_types",
  "data": {
    "name": "geodb_example",
    "values": []
  },
  "transform": [
    {
      "calculate": "datum.measurement_value",
      "as": "NO2 Surface Concentration µg/m3"
    },
    {
      "calculate": "slice(datum.reference_value, 1, length(datum.reference_value) - 1)",
      "as": "ref_clean"
    },
    { "calculate": "split(datum.ref_clean, ',')[0]", "as": "7-day mean" },
    {
      "calculate": "split(datum.ref_clean, ',')[1]",
      "as": "2017-2019 7-day mean"
    },
    {
      "calculate": "split(datum.ref_clean, ',')[2]",
      "as": "2017-2019 range max"
    },
    {
      "calculate": "split(datum.ref_clean, ',')[3]",
      "as": "2017-2019 range min"
    },
    {
      "fold": [
        "NO2 Surface Concentration µg/m3",
        "7-day mean",
        "2017-2019 7-day mean"
      ],
      "as": ["measurement", "value"]
    },
    {
      "calculate": "toNumber(datum.value)",
      "as": "NO2 Surface Concentration µg/m3"
    }
  ],
  "layer": [
    {
      "mark": { "type": "area", "opacity": 0.7, "color": "#CCCCCC" },
      "encoding": {
        "x": {
          "field": "time",
          "type": "temporal",
          "axis": { "format": "%Y-%m-%d" }
        },
        "y": {
          "field": "2017-2019 range max",
          "type": "quantitative",
          "axis": { "title": "NO2 Surface Concentration µg/m3" }
        },
        "y2": { "field": "2017-2019 range min" }
      }
    },
    {
      "mark": { "type": "line", "strokeWidth": 1 },
      "encoding": {
        "x": {
          "field": "time",
          "type": "temporal",
          "axis": { "format": "%Y-%m-%d" }
        },
        "y": {
          "field": "NO2 Surface Concentration µg/m3",
          "type": "quantitative"
        },
        "color": {
          "field": "measurement",
          "type": "nominal",
          "scale": {
            "domain": [
              "NO2 Surface Concentration µg/m3",
              "7-day mean",
              "2017-2019 7-day mean",
              "2017-2019 range"
            ],
            "range": ["#ff0000", "#0000ff", "#555555", "#cccccc"]
          },
          "legend": { "title": "Measurement" }
        }
      }
    },
    {
      "encoding": {
        "x": {
          "field": "time",
          "type": "temporal",
          "axis": { "format": "%Y-%m-%d" }
        },
        "y": {
          "field": "NO2 Surface Concentration µg/m3",
          "type": "quantitative"
        }
      },
      "transform": [{ "filter": { "param": "hover", "empty": false } }],
      "mark": "point"
    },
    {
      "mark": "rule",
      "encoding": {
        "x": {
          "field": "time",
          "type": "temporal",
          "axis": { "format": "%Y-%m-%d" }
        },
        "opacity": {
          "condition": { "value": 0.3, "param": "hover", "empty": false },
          "value": 0
        },
        "tooltip": [
          {
            "field": "time",
            "type": "temporal",
            "title": "Date",
            "format": "%Y-%m-%d"
          },
          { "field": "value", "type": "quantitative", "title": "Value" },
          { "field": "measurement", "type": "nominal", "title": "measurement" }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["time"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        },
        { "name": "grid", "select": "interval", "bind": "scales" }
      ]
    }
  ],
  "background": "transparent"
}
